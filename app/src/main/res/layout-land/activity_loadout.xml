<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="250dp"
    tools:context=".LoadoutActivity">

    <ImageView
        android:id="@+id/imgLoadoutBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/title_image_desc"
        android:maxHeight="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/zombies_city2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/loadoutDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/permanent_marker"
        android:text="@string/loadout_directions"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/vivid_red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hardButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <ImageButton
        android:id="@+id/hardButton"
        android:layout_width="89dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/desc_worst_gear"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/normalButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadoutDescriptionView"
        app:srcCompat="@drawable/ic_fist" />

    <ImageButton
        android:id="@+id/normalButton"
        android:layout_width="89dp"
        android:layout_height="74dp"
        android:contentDescription="@string/desc_normal_gear"
        app:layout_constraintBottom_toTopOf="@+id/easyButton"
        app:layout_constraintEnd_toEndOf="@+id/hardButton"
        app:layout_constraintStart_toStartOf="@+id/hardButton"
        app:layout_constraintTop_toBottomOf="@+id/hardButton"
        app:srcCompat="@drawable/ic_handgun" />

    <ImageButton
        android:id="@+id/easyButton"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/desc_best_gear"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/normalButton"
        app:layout_constraintStart_toStartOf="@+id/normalButton"
        app:layout_constraintTop_toBottomOf="@+id/normalButton"
        app:srcCompat="@drawable/ic_automatic_weapon" />

    <TextView
        android:id="@+id/currentHighScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/permanent_marker"
        android:text="@string/loadout_current_high_score"
        android:textAlignment="center"
        android:textColor="@color/vivid_red"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/loadoutHighScoreView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/loadoutHighScoreView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/permanent_marker"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/vivid_red"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="@+id/currentHighScoreView"
        app:layout_constraintStart_toStartOf="@+id/currentHighScoreView"
        app:layout_constraintTop_toBottomOf="@+id/currentHighScoreView" />

    <Button
        android:id="@+id/playButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/brass"
        android:fontFamily="@font/permanent_marker"
        android:text="@string/loadout_play_button"
        android:textAlignment="center"
        android:textColor="@color/eerie_black"
        app:layout_constraintBottom_toTopOf="@+id/highScoresButton"
        app:layout_constraintEnd_toEndOf="@+id/highScoresButton"
        app:layout_constraintStart_toStartOf="@+id/highScoresButton"
        app:layout_constraintTop_toBottomOf="@+id/loadoutHighScoreView" />

    <Button
        android:id="@+id/highScoresButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/brass"
        android:fontFamily="@font/permanent_marker"
        android:text="@string/loadout_high_scores_button"
        android:textAlignment="center"
        android:textColor="@color/eerie_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/playButton" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>